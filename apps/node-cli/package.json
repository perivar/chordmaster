{
  "name": "node-cli",
  "version": "1.0.0",
  "description": "cli to upload to firestore",
  "main": "index.js",
  "license": "MIT",
  "type": "module",
  "bin": {
    "chordmaster": "./build/index.js"
  },
  "scripts": {
    "build:pegjs:chordpro": "peggy --plugin ts-pegjs -o src/parser/chord_pro_peg_parser.ts src/parser/chord_pro_grammar.pegjs",
    "build:pegjs:ug": "peggy --plugin ts-pegjs -o src/parser/ug_peg_parser.ts src/parser/ug_grammar.pegjs",
    "build:tsc": "pnpm build:pegjs:ug && pnpm build:pegjs:chordpro && pnpm tsc && pnpm lint-fix && pnpm chmod",
    "build:esbuild": "esbuild src/index.ts --bundle --platform=node --format=esm --outfile=build/index.js --target=node20 --sourcemap=inline --external:firebase-admin --banner:js='import { createRequire as topLevelCreateRequire } from \"module\"; const require = topLevelCreateRequire(import.meta.url);'",
    "build": "pnpm build:esbuild && pnpm lint-fix && pnpm chmod",
    "tsc": "tsc --build --verbose",
    "chmod": "chmod u+x ./build/index.js",
    "lint": "eslint '**/*.{js,ts}'",
    "lint-fix": "eslint '**/*.{js,ts}' --fix",
    "format": "prettier --check \"**/*.{js,ts}\"",
    "format-fix": "prettier --write \"**/*.{js,ts}\"",
    "test": "pnpm jest",
    "start": "node build/index.js",
    "dev": "run-p dev:*",
    "dev:tsc": "tsc --watch --preserveWatchOutput",
    "dev:node": "node --watch build/index.js",
    "dev:esbuild": "pnpm run build:esbuild --watch",
    "link": "npm link",
    "unlink": "npm unlink --global"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.0",
    "@types/he": "^1.2.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "@types/yargs": "^17.0.33",
    "annotate-code": "^2.0.4",
    "esbuild": "^0.24.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unused-imports": "4.1.4",
    "globals": "^15.12.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "peggy": "3.0.2",
    "pegjs-backtrace": "^0.2.1",
    "prettier": "3.4.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-pegjs": "^4.2.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0"
  },
  "dependencies": {
    "@chordmaster/utils": "workspace:^",
    "axios": "^1.7.8",
    "chalk": "^5.3.0",
    "chord-symbol": "^4.0.0",
    "chordsheetjs": "^10.5.0",
    "firebase-admin": "^13.0.1",
    "he": "^1.2.0",
    "yargs": "^17.7.2"
  }
}
